<h1>Log In</h1>

<div id='login-form'>
	<%= form_tag sessions_path do %>
	  <div id='email-field'>
	    <%= label_tag :email %><br />
	    <%= text_field_tag :email, params[:email] %>
	  </div>

	  <div id='password-field'>
	    <%= label_tag :password %><br />
	    <%= password_field_tag :password %>
	  </div>

	  <div id='login-button'><%= submit_tag "Log in" %></div>
	<% end %>
</div>